# Debug mode - Set to True for local development, False for production
# Affects how the application behaves (e.g., local vs. remote Qdrant instance)
DEBUG=True

# Qdrant Vector Database Configuration
# Local development URL (when DEBUG=True)
QDRANT_URL=http://localhost:6333

# Qdrant API Key
# Only required when DEBUG=False (production mode)
# Leave empty for local development
QDRANT_API_KEY=your_api_key_here

# Resource Limits
# Memory limit in gigabytes (optional, but recommended in production)
MEMORY_LIMIT_GB=32
# GPU memory limit in gigabytes (optional, only used if GPUs are available)
GPU_MEMORY_LIMIT=16

# Logging Configuration (optional)
LOG_LEVEL=INFO

# only LLAMA or CEREBRAS supported
LLM=your_llm_here 

# API_KEY
API_KEY=your_api_key_here

# Chunk information
MIN_CHUNK_SIZE=100
MAX_CHUNK_SIZE=4000
MAX_WORKERS_PER_CHUNK=10

# Number of clusters for K-means
K_MEANS_CLUSTERS=20